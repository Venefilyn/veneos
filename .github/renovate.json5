{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: ["config:best-practices"],

  rebaseWhen: "never",
  customManagers: [
    {
      customType: 'regex',
      managerFilePatterns: [
        '/^Justfile$/',
      ],
      matchStrings: [
        '(?<justName>.+?)\\s:=\\s"(?<packageName>\\S+):(?<currentValue>\\S+)@(?<currentDigest>sha256:[a-f0-9]+?)"',
      ],
      datasourceTemplate: 'docker',
    },
  ],
  packageRules: [
    {
      automerge: true,
      groupName: 'Build Containers',
      matchPackageNames: [
        'cgr.dev/chainguard/cosign',
        'ghcr.io/anchore/syft',
      ],
    },
    {
      automerge: true,
      matchManagers: [
        'github-actions',
      ],
      matchUpdateTypes: [
        'pin',
        'digest',
        'pinDigest',
      ],
    },
    {
      matchManagers: [
        'jsonata',
      ],
      matchUpdateTypes: ["digest", "pinDigest", "pin"],
      matchDepTypes: ["container"],
      matchFileNames: ["images.yml"],
      matchStrings: [
        'images.$map(mapping.upstream, function($v, $k, $a) { { "currentValue": $v, "depName": $.image } })'
      ]
    },
  ],
}
