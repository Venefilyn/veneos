{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: ["config:best-practices"],

  rebaseWhen: "never",
  customManagers: [
    {
      customType: 'regex',
      managerFilePatterns: [
        '/^Justfile$/',
      ],
      matchStrings: [
        '(?<justName>.+?)\\s:=\\s"(?<packageName>\\S+):(?<currentValue>\\S+)@(?<currentDigest>sha256:[a-f0-9]+?)"',
      ],
      datasourceTemplate: 'docker',
    },
    {
      customType: "jsonata",
      managerFilePatterns: [
        "/^images.ya?ml$/",
      ],
      fileFormat: "yaml",
      datasourceTemplate: "docker",
      matchStrings: [
        'images.$map(mapping, function($v, $k, $a) { { "currentValue": $v.upstream, "currentDigest": $v.upstreamDigest, "depName": $.image } })'
      ]
    }
  ],
  packageRules: [
    {
      automerge: true,
      groupName: 'Build Containers',
      matchPackageNames: [
        'cgr.dev/chainguard/cosign',
        'ghcr.io/anchore/syft',
      ],
    },
    {
      automerge: true,
      matchManagers: [
        'github-actions',
      ],
      matchUpdateTypes: [
        'pin',
        'digest',
        'pinDigest',
      ],
    }
  ],
}
